<!-- CONTENT -->
<div id="divContent">

    <!-- FORM -->
    <div id="divForm">
        <div id="divTitleNewGame" class="text-center mb-4">
            <span id="titleNewGame">Nuevo Juego</span>
        </div>
        <input type="text" class="form-control mb-3" placeholder="Nombre del Juego" id="txtNombre" name="txtNombre"
